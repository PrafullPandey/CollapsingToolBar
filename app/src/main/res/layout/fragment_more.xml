<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.corific.p2_vaio.corific_ui.fragments.More">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/grey_200"
            android:padding="2dp"
            />


    <LinearLayout
        android:id="@+id/addToContactsBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topView"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/moreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:padding="8dp"
            android:text="Add to Contacts"
            android:textSize="18sp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/ic_action_arrow_right" />

    </LinearLayout>
    <View
        android:id="@+id/middleView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/addToContactsBlock"
        android:background="@color/grey_200"
        android:padding="2dp"
        />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/middleView">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</FrameLayout>
